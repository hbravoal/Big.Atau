@using Mastercard.UI.Business.Helpers
<section class="header-brand header-brand-menu">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-11 text-center">
                @if (!string.IsNullOrEmpty(SessionHelper.Token))
                {
                    if (SessionHelper.FirstLogin == false)
                    {
                        <a href="@Url.Action("Index", "Profile")"><img class="img-fluid" src="~/Content/img/brand/logo-header.svg"></a>
                    }
                    else
                    {
                        <a href="#"><img class="img-fluid" src="~/Content/img/brand/logo-header.svg"></a>
                    }

                }
                else
                {
                    <a href="@Url.Action("FirstLogin","Account")"><img class="img-fluid" src="~/Content/img/brand/logo-header.svg"></a>
                }
                <hr>
            </div>
        </div>
    </div>
        @if (!string.IsNullOrEmpty(SessionHelper.Token))
        {
            <div class="container py-1">
                <div class="row">
                    <div class="col-7">
                        <h2>Hola, @SessionHelper.Name</h2>
                    </div>
                    <div class="col-5 d-flex align-items-center justify-content-end">
                        <a class="logout" href="@Url.Action("LogOut", "Account")">
                            Cerrar sesión
                            <img src="@Url.Content("~/Content/img/icons/log-out.svg")">
                        </a>
                    </div>
                </div>
            </div>
        }
</section>